<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/ThoughtDef.xsd">
    <ThoughtDef Abstract="true" Name="DefaultReactionBase">
        <durationDays>10</durationDays>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>

    </ThoughtDef>

    <ThoughtDef ParentName="DefaultReactionBase">
        <defName>DefaultTransformationReaction</defName>
        <stages>
            <li>
                <label>transformed wild pawn</label>
                <description>TODO</description>
            </li>
            <li>
                <label>transformed colonist</label>
                <description>A colonist was turned into an animal. That's not right...</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
            <li>
                <label>transformed prisoner</label>
                <description>We turned a captive into an animal. I know they're our prisoner, but it just seems wrong.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>transformed guest</label>
                <description>TODO</description>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="DefaultReactionBase">
        <defName>DefaultMergedThought</defName>
        <stages>
            <li>
                <label>wild pawn merged</label>
                <description>TODO</description>
            </li>
            <li>
				<label>colonist merged</label>
				<description>We did mad science on one of our own, and now they're...horrifying.</description>
				<baseMoodEffect>-8</baseMoodEffect>

            </li>
            <li>
				<label>prisoner merged</label>
				<description>We did mad science on a captive. It just feels wrong to make them a monster...</description>
				<baseMoodEffect>-4</baseMoodEffect>

            </li>
            <li>
                <label>guest merged</label>
                <description>TODO</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


    <ThoughtDef ParentName="DefaultReactionBase">
        <defName>DefaultRevertedPawnReaction</defName>
        <stages>
            <li>
                <label>wild pawn reverted</label>
                <description>TODO</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>colonist reverted</label>
                <description>A colonist is human again, we did a good deed.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
            <li>
                <label>prisoner reverted</label>
                <description>TODO</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>guest reverted</label>
                <description>TODO</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="DefaultReactionBase">
        <defName>DefaultPermanentlyFeralReaction</defName>
        <stages>
            <li>
                <label>wild pawn permanently feral</label>
                <description>TODO</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>colonist permanently feral</label>
                <description>We knew it was coming...but now they can never be human again.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>prisoner permanently feral</label>
                <description>TODO</description>
                <visible>true</visible>
            </li>
            <li>
                <label>guest permanently feral</label>
                <description>TODO</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>