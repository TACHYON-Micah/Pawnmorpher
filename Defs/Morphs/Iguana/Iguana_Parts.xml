<Defs>
	<HediffDef Name="IguanaPart" ParentName="PawnmorphPart" Abstract="True">
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
				<morph>IguanaMorph</morph>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="IguanaPart">
		<defName>EtherIguanaSnout</defName>
		<label>iguana snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into a leathery beak.</description>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.06</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="IguanaPart">
		<defName>EtherIguanaHorns</defName>
		<description>A series of spines drapes down [PAWN_nameDef]'s back.</description>
		<label>spines</label>
		<!--Needs Stats-->
	</HediffDef>

	<HediffDef ParentName="IguanaPart">
		<defName>EtherIguanaTail</defName>
		<label>iguana tail</label>
		<description>A spiney green tail.</description>
		<!--Needs stats-->
	</HediffDef>
	
	<HediffDef ParentName="IguanaPart">
		<defName>EtherIguanaHand</defName>
		<label>dextrous claws</label>
		<description>[PAWN_nameDef]'s fingers have elongated into scale-covered claws.</description>
		<stages>
			<li>
				<label>unfamiliar</label>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>claws</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="IguanaPart">
		<defName>EtherIguanaFoot</defName>
		<label>reptilian foot</label>
		<description>The whole of [PAWN_nameDef]'s feet have become toes.</description>
		<stages>
			<li />
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
</Defs>