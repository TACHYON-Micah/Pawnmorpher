<Defs>
	<HediffDef Name="RatPart" ParentName="PawnmorphPart" Abstract="True">
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
				<morph>RatMorph</morph>
			</li>
		</comps>
	</HediffDef>
  
	<HediffDef ParentName="RatPart">
		<defName>EtherRatSnout</defName>
		<label>rodent snout</label>
		<description>A ratty snout graces [PAWN_nameDef]'s face, long teeth for chewing through anything.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.04</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>4.0</power>
						<cooldownTime>1.2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="RatPart">
		<defName>EtherRatEar</defName>
		<label>ratty</label>
		<description>Grey-furred, rounded ears listen carefully for predators.</description>
		<stages>
			<li>
				<partEfficiencyOffset>0.1</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="RatPart">
		<defName>EtherRatTail</defName>
		<label>hairless tail</label>
		<description>A ratty tail, hairless, long and snaking.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="RatPart">
		<defName>EtherDextrousPawHand</defName>
		<label>dextrous paw</label>
		<description>Thankfully, this more manipulative paw allows [PAWN_nameDef] to keep their thumbs.</description>
    <initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
        <label>unfamiliar</label>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <partEfficiencyOffset>0.1</partEfficiencyOffset>
        <label>adapted</label>
      </li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>claws</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>2.0</power>
						<cooldownTime>1</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="RatPart">
		<defName>EtherRatFoot</defName>
		<label>rodent</label>
		<description>[PAWN_nameDef]'s feet are dextrous and elongated, but hairless and pale.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>