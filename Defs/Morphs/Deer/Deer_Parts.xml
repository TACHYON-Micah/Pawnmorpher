<Defs>
	<HediffDef Name="DeerPart" ParentName="PawnmorphPart" Abstract="True">
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MorphInfluence">
				<morph>DeerMorph</morph>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="DeerPart">
		<defName>EtherDeerSnout</defName>
		<label>cervine snout</label>
		<description>A snout graces [PAWN_nameDef]'s face, deerlike with a wide nose, picking up scents of predators.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li><li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.08</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>5.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="DeerPart">
		<defName>EtherDeerEar</defName>
		<label>cervine</label>
		<description>The smooth, long ears of a deer sit atop [PAWN_nameDef]'s head, keeping watch for predators.</description>
		<stages>
			<li>
				<partEfficiencyOffset>0.15</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DeerPart">
		<defName>EtherShortTail</defName>
		<label>short tail</label>
		<description>A short tail juts out from [PAWN_nameDef]'s spine, flaring up whenever danger is sensed.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.005</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="DeerPart">
		<defName>EtherAntlers</defName>
		<label>antlers</label>
		<description>Burly antlers decorate [PAWN_nameDef]'s head.</description>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>gored</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>20.0</power>
						<cooldownTime>3</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.05</severityPerDay>
			</li>
		</comps>
		<initialSeverity>0.1</initialSeverity>
		<stages>
			<li>
				<label>fawn</label>
				<statOffsets>
					<SocialImpact>+0.02</SocialImpact>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>buck</label>
				<statOffsets>
					<SocialImpact>+0.07</SocialImpact>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.7</minSeverity>
				<label>stag</label>
				<statOffsets>
					<SocialImpact>+0.15</SocialImpact>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs>