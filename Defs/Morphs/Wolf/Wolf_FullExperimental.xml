<Defs>
	<HediffDef ParentName="AspectedMorphParent">
		<defName>PawnmorphWolfTF_Experimental</defName>
		<hediffClass>Pawnmorph.Hediffs.MorphTf</hediffClass>
		<label>wolfmorph (experimental)</label>
		<stages>
			<li>
				<label>reeling</label>
				<hungerRateFactor>1.6</hungerRateFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="Pawnmorph.HediffGiver_TF">
						<hediff>TransformedHuman</hediff>
						<pawnkinds>
							<li>Wolf_Timber</li>
							<li>Wolf_Arctic</li>
						</pawnkinds>
						<tale>TransformationCanid</tale>
					</li>
				</hediffGivers>
			</li>
			<li Class="Pawnmorph.Hediffs.TransformationStage">
				<label>transforming</label>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<letterText>PAWN_nameDef is at risk of transforming into an animal soon. You can use stabilizer to prevent this</letterText>
				<letterLabel>PAWN_nameDef is at risk of fully changing very soon.</letterLabel>
			</li>
			<li Class="Pawnmorph.Hediffs.TransformationStage">
				<label>changing</label>
				<minSeverity>0.65</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<mutations>
					<li>
						<mutation>EtherWolfMuzzle</mutation>
						<blocks>true</blocks>
					</li>
					<li>
						<mutation>EtherWolfEar</mutation>
					</li>
					<li>
						<mutation>EtherWolfTail</mutation>
						<blocks>true</blocks>
					</li>
					<li>
						<mutation>EtherThickFurLimb</mutation>
					</li>
					<li>
						<mutation>EtherPawHand</mutation>
						<addChance>0.5</addChance>
					</li>
					<li>
						<mutation>EtherDigitigradeLeg</mutation>
					</li>
					<li>
						<mutation>EtherPawFoot</mutation>
						<blocks>true</blocks>
					</li>
				</mutations>
			</li>
		</stages>
	</HediffDef>

